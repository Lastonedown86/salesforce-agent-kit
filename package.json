{
  "name": "@cloudcrafter/salesforce-agent-kit",
  "version": "1.0.1",
  "description": "AI agent kit for Salesforce development - patterns, best practices, and automation for Apex, LWC, Triggers, and more",
  "main": "dist/index.js",
  "bin": {
    "cloudcrafter-agent-kit": "dist/agent-kit/index.js"
  },
  "scripts": {
    "build": "tsc",
